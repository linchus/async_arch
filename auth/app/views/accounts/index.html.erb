<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>public_id</th>
      <th>email</th>
      <th>full name</th>
      <th>active?</th>
      <th>role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.public_id %></td>
        <td><%= account.email %></td>
        <td><%= account.full_name %></td>
        <td><%= account.active %></td>
        <td><%= account.role %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

